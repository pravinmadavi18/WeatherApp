<?xml version="1.0" encoding="utf-8"?>
<com.virtusa.weatherapp.views.WARelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_30dp"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <com.virtusa.weatherapp.views.WATextView
        android:id="@+id/tv_weather_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/textColor"
        android:textSize="@dimen/_20sp" />

    <com.virtusa.weatherapp.views.WATextView
        android:id="@+id/tv_weather_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_50dp"
        android:layout_toRightOf="@+id/tv_weather_type"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_20sp" />
</com.virtusa.weatherapp.views.WARelativeLayout>